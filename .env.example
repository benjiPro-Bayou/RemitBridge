# Bridge Remit Environment Variables
# Copy this file to .env.local and fill in your values

# Cybersource Configuration
CYBERSOURCE_MERCHANT_ID=your_merchant_id
CYBERSOURCE_API_KEY=your_api_key
CYBERSOURCE_SECRET_KEY=your_secret_key
CYBERSOURCE_ENVIRONMENT=sandbox

# AI Gateway (already configured on Vercel)
AI_GATEWAY_API_KEY=your_ai_gateway_key

# App Configuration
NEXT_PUBLIC_APP_NAME=Bridge Remit
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (for production - add your preferred DB)
DATABASE_URL=your_database_url

# Authentication (for production)
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000
